{
  "name": "kadir11",
  "version": "1.0.0",
  "description": "Tamagotchi RPG",
  "main": "main.js",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:vite\" \"npm:dev:electron\"",
    "dev:vite": "cd frontend && npm run dev",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "start": "electron .",
    "test": "mocha",
    "coverage": "nyc --reporter=text --reporter=lcov mocha",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^35.0.1",
    "jsdom": "^27.2.0",
    "mocha": "^10.2.0",
    "nyc": "^17.1.0",
    "sinon": "^21.0.0",
    "wait-on": "^7.0.1",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.2.0",
    "prettier": "^3.2.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3"
  },
  "nyc": {
    "extension": [
      ".js"
    ],
    "exclude": [
      "test/**",
      "frontend/**"
    ],
    "reporter": [
      "text",
      "lcov"
    ],
    "all": false
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  }
}
